{
  "adcm": {
    "config": {
      "global": {
        "adcm_url": null,
        "verification_public_key": "{{ stackdir }}/data/file/adcm.1.global.verification_public_key",
        "accept_only_verified_bundles": false
      },
      "statistics_collection": {
        "url": "adcm-usage-ss.arenadata.io"
      },
      "google_oauth": {
        "client_id": null,
        "secret": null
      },
      "yandex_oauth": {
        "client_id": null,
        "secret": null
      },
      "audit_data_retention": {
        "log_rotation_on_fs": 365,
        "log_rotation_in_db": 365,
        "config_rotation_in_db": 0,
        "retention_period": 1825,
        "data_archiving": false
      },
      "ldap_integration": null,
      "auth_policy": {
        "min_password_length": 12,
        "max_password_length": 20,
        "login_attempt_limit": 5,
        "block_time": 5
      }
    }
  },
  "context": {
    "cluster_id": 1,
    "type": "cluster"
  },
  "env": {
    "run_dir": "{{ datadir }}/run",
    "log_dir": "{{ datadir }}/log",
    "tmp_dir": "{{ datadir }}/run/{{ job_id }}/tmp",
    "stack_dir": "{{ stackdir }}/data/bundle/{{ cluster_bundle.hash }}",
    "status_api_token": "{{ token }}"
  },
  "job": {
    "id": {{ job_id }},
    "action": "task_mixed",
    "job_name": "bundle_relative",
    "command": "bundle_relative",
    "script": "scripts/over_there.yaml",
    "verbose": false,
    "playbook": "{{ stackdir }}/data/bundle/{{ cluster_bundle.hash }}/scripts/over_there.yaml",
    "cluster_id": 1,
    "hostgroup": "CLUSTER"
  }
}