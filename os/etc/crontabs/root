# do daily/weekly/monthly maintenance
# min   hour    day     month   weekday command
*/15    *       *       *       *       run-parts /etc/periodic/15min
0       *       *       *       *       run-parts /etc/periodic/hourly
0       2       *       *       *       run-parts /etc/periodic/daily
0       3       *       *       6       run-parts /etc/periodic/weekly
0       5       1       *       *       run-parts /etc/periodic/monthly
0       8       */1     *       *       python /adcm/python/manage.py logrotate --target all > /proc/1/fd/1 2>&1
0       10      */1     *       *       python /adcm/python/manage.py clearaudit > /proc/1/fd/1 2>&1
*/1     *       *       *       *       python /adcm/python/manage.py run_ldap_sync > /proc/1/fd/1 2>&1
*/1     *       *       *       *       python /adcm/python/manage.py simplecommand > /proc/1/fd/1 2>&1
